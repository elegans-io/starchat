{
	"index.queries.cache.enabled": true,
	"analysis":
	{
		"char_filter":
		{
			"&_to_and": {
				"type":       "mapping",
				"mappings": [ "&=> and "]
			}
		},
		"filter":
		{
			"jenny_fi_stopwords":
			{
				"type":       "stop",
				"stopwords":  "_finnish_" 
			},
			"finnish_stemmer": {
				"type":       "stemmer",
				"language":   "finnish"
			},
			"jenny_fi_shingle_2":
			{
				"type":	"shingle",
				"min_shingle_size": 2,
				"max_shingle_size": 2,
				"output_unigrams": true
			},
			"jenny_fi_shingle_3":
			{
				"type":	"shingle",
				"min_shingle_size": 3,
				"max_shingle_size": 3,
				"output_unigrams": true
			},
			"jenny_fi_shingle_4":
			{
				"type":	"shingle",
				"min_shingle_size": 4,
				"max_shingle_size": 4,
				"output_unigrams": true
			},
			"jenny_fi_shingle_2_10":
			{
				"type":	"shingle",
				"min_shingle_size": 2,
				"max_shingle_size": 10,
				"output_unigrams": true
			}
		},
		"analyzer":
		{
			"jenny_raw_analyzer":
			{
				"tokenizer":    "keyword",
				"filter":       [ "lowercase"]
			},
			"jenny_base_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "&_to_and" ],
				"filter":       [ "lowercase"]
			},
			"jenny_stop_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_stopwords"]
			},
			"jenny_base_stem_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "&_to_and" ],
				"filter":       [ "lowercase", "finnish_stemmer"]
			},
			"jenny_stem_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_stopwords", "finnish_stemmer"]
			},
			"jenny_shingles_2_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_shingle_2"]
			},
			"jenny_stemmed_shingles_2_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "finnish_stemmer", "jenny_fi_shingle_2"]
			},
			"jenny_shingles_3_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_shingle_3"]
			},
			"jenny_stemmed_shingles_3_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "finnish_stemmer", "jenny_fi_shingle_3"]
			},
			"jenny_shingles_4_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_shingle_4"]
			},
			"jenny_stemmed_shingles_4_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "finnish_stemmer", "jenny_fi_shingle_4"]
			},
			"jenny_shingles_2_10_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "jenny_fi_shingle_2_10"]
			},
			"jenny_stemmed_shingles_2_10_analyzer":
			{
				"tokenizer":    "standard",
				"char_filter":  [ "html_strip", "&_to_and" ],
				"filter":       [ "lowercase", "finnish_stemmer", "jenny_fi_shingle_2_10"]
			},
			"jenny_delimited_double": {
				"tokenizer":"whitespace",
				"encoding": "double",
				"filter": "delimited_payload_filter"
			}
		}
	}
}
